{%
  set classes = [
    'layout',
    'layout--accordion',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.header %}
      <details class="layout__details">
        <summary class="layout__summary">{{ content.header }}</summary>
    {% endif %}

    <div class="layout__regions">
      <div {{ region_attributes.content }} class="layout__region layout__region--content">
        {{ content.content }}
      </div>
    </div>

    {% if content.header %}
      </details>
    {% endif %}
  </div>
{% endif %}
